pipeline {
    agent any

    environment {
        IMAGE_NAME = "srisudharsan1b/testops"
        IMAGE_TAG = "latest"
        REGISTRY = "docker.io"
        REPO = "srisudharsan1b"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${REGISTRY}/${REPO}/${IMAGE_NAME}:${IMAGE_TAG}")
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh './build.sh'
                }
            }
        }

        stage('Deploy Application') {
            steps {
                script {
                    sh './deploy.sh'
                }
            }
        }
    }

    post {
        success {
            echo 'Build and Deploy Successful!'
        }
        failure {
            echo 'Build or Deploy failed.'
        }
    }
}
